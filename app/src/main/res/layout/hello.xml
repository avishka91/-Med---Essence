<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F5F5F5">



<!-- Mood Cards -->
    <LinearLayout
        android:id="@+id/mood_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Happy -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_happy"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:text="Happy"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Happy face"
                android:src="@drawable/happy" />
        </LinearLayout>

        <!-- Sad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/happy"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_marginBottom="8dp"
                android:text="Sad"
                android:textColor="#020202"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Sad face"
                android:src="@drawable/sad" />
        </LinearLayout>

        <!-- Neutral -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/happy"
            android:padding="12dp"
            android:layout_margin="4dp">

            <TextView
                android:text="Neutral"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="Neutral face"
                android:src="@drawable/neutral" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mood Slider -->
    <SeekBar
        android:id="@+id/moodSeekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mood_cards"
        android:layout_width="401dp"
        android:layout_height="24dp"
        android:max="2"
        android:progress="1"
        android:progressTint="#FF4081"
        android:thumbTint="#A0A0A0"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="115dp" />

</androidx.constraintlayout.widget.ConstraintLayout>